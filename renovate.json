{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "managerFilePatterns": [
      "cluster/**/*.yaml"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update docker image references",
      "managerFilePatterns": [
        "cluster/**/*.yaml",
        "cluster/**/*.yml"
      ],
      "matchStrings": [
        "image: (?<depName>.*?):(?<currentValue>.*?)\\s+"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
